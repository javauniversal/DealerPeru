<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_serie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/hota"
            android:textSize="@dimen/dimen_letra_app_titulo"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_fecha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/hota"
            android:textSize="@dimen/dimen_letra_app_estandar"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center_vertical|center_horizontal|right"
        android:orientation="vertical">

        <android.dcsdealerperu.com.dealerperu.Activity.SmoothCheckBox
            android:id="@+id/checkBox"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:gravity="right"
            android:textSize="@dimen/dimen_letra_app_estandar" />

    </LinearLayout>


</LinearLayout>