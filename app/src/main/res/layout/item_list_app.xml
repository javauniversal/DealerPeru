<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/image_departamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/colorPrimary"
        android:src="@drawable/ic_reply_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignRight="@+id/image_departamento"
        android:layout_alignEnd="@+id/image_departamento">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textAllCaps="true"
            android:layout_marginLeft="26dp"
            android:text="Hola"
            android:textSize="@dimen/dimen_letra_app"
            android:layout_centerVertical="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sub"
            android:text="Hola"
            android:layout_marginLeft="26dp"
            android:textSize="@dimen/dimen_letra_app"
            android:layout_centerVertical="true" />

    </LinearLayout>

    <ImageView
        android:id="@+id/image_estado_visita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:tint="@color/colorPrimary"
        android:src="@drawable/ic_radio_button_unchecked_black_24dp"/>


</RelativeLayout>