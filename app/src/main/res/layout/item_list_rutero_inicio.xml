<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="6dp"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_help_black_24dp"
        android:tint="@color/colorPrimary"
        android:id="@+id/imgIndicador"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/accept" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/imgIndicador"
        android:layout_toRightOf="@+id/imgIndicador"
        android:layout_toEndOf="@+id/imgIndicador">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nombre"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_letra_app_titulo"
            android:id="@+id/txtNombrePunto" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:textSize="@dimen/dimen_letra_app_estandar"
            android:id="@+id/txtDireccion" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Stock: 23"
                android:layout_weight="1"
                android:textSize="@dimen/dimen_letra_app_estandar"
                android:id="@+id/txtStock"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:layout_weight="1"
                android:textSize="@dimen/dimen_letra_app_estandar"
                android:id="@+id/txtDiasInven"
                android:gravity="center_vertical|center_horizontal" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:visibility="gone"
                android:tint="@color/rojo_progress"
                android:src="@drawable/ic_warning_black_24dp"
                android:id="@+id/imgquiebre"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:tint="@color/colorPrimary"
                android:src="@drawable/ic_map_black_24dp"
                android:id="@+id/imgMap"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_reply_black_24dp"
        android:tint="@color/colorPrimary"
        android:id="@+id/imgIndicadorvisita"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/accept" />

</RelativeLayout>