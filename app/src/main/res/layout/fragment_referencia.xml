<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context="android.dcsdealerperu.com.dealerperu.Fragment.FragmentReferencia">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:contentPaddingBottom="16dp"
            app:contentPaddingLeft="16dp"
            app:contentPaddingRight="16dp"
            app:contentPaddingTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dimen_letra_app"
                    android:text="Referencias"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:id="@+id/textView8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="@color/colorAccent"
                    android:text="Estado comercial" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/image_estado_comercial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_pin_drop_black_24dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_estado_comercial"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/image_estado_comercial"
                        android:textSize="@dimen/dimen_letra_app"
                        android:layout_toRightOf="@+id/image_estado_comercial"
                        android:layout_marginLeft="8dp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="@color/colorAccent"
                    android:text="Circuito" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/image_circuito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_pin_drop_black_24dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_circuito"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/image_circuito"
                        android:textSize="@dimen/dimen_letra_app"
                        android:layout_toRightOf="@+id/image_circuito"
                        android:layout_marginLeft="8dp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="@color/colorAccent"
                    android:text="Ruta" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/image_ruta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_pin_drop_black_24dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_ruta"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/image_ruta"
                        android:textSize="@dimen/dimen_letra_app"
                        android:layout_toRightOf="@+id/image_ruta"
                        android:layout_marginLeft="8dp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="@color/colorAccent"
                    android:text="Categoria" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/image_categoria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_pin_drop_black_24dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_categoria"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/image_categoria"
                        android:textSize="@dimen/dimen_letra_app"
                        android:layout_toRightOf="@+id/image_categoria"
                        android:layout_marginLeft="8dp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="@color/colorAccent"
                    android:text="Sub categoria" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/image_sub_categoria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_pin_drop_black_24dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner_sub_categoria"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/image_sub_categoria"
                        android:textSize="@dimen/dimen_letra_app"
                        android:layout_toRightOf="@+id/image_sub_categoria"
                        android:layout_marginLeft="8dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/image_mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_perm_identity_black_24dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_password1"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/image_mail"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/image_mail"
                        android:layout_marginLeft="8dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/edit_codigo_cum"
                            android:hint="CÃ³digo CUM"
                            android:textSize="@dimen/dimen_letra_app"
                            android:inputType="number"/>

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/image_cell"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_assignment_black_24dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/edit_cell_e"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/image_cell"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_toRightOf="@+id/image_cell">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/edit_referencia"
                            android:hint="Referencia"
                            android:textSize="@dimen/dimen_letra_app"
                            android:inputType="text" />

                    </android.support.design.widget.TextInputLayout>


                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/BrandButtonStyle2"
                android:text="Regresar"
                android:layout_weight="1"
                android:id="@+id/btn_regresar_ref"
                android:gravity="center_vertical|center_horizontal" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/BrandButtonStyle2"
                android:layout_weight="1"
                android:text="Guardar"
                android:id="@+id/btn_guardar"
                android:gravity="center_vertical|center_horizontal" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
