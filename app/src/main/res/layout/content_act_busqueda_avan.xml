<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_large"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:contentPaddingBottom="6dp"
            app:contentPaddingLeft="6dp"
            app:contentPaddingRight="6dp"
            app:contentPaddingTop="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="79dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="18dp">

                    <ImageView
                        android:id="@+id/image_cedula"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/accept"
                        android:src="@drawable/ic_assignment_black_24dp"
                        android:tint="@color/colorPrimary" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_cedula"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/image_cedula"
                        android:layout_toRightOf="@+id/image_cedula">

                        <EditText
                            android:id="@+id/edit_nombre_punto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/nombre_del_pdv"
                            android:inputType="text"
                            android:textSize="@dimen/dimen_letra_app_estandar" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="18dp">

                    <ImageView
                        android:id="@+id/image_nombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/accept"
                        android:src="@drawable/ic_person_pin_black_24dp"
                        android:tint="@color/colorPrimary" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/image_nombre"
                        android:layout_toRightOf="@+id/image_nombre">

                        <EditText
                            android:id="@+id/edit_nit_punto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/ruc_dni_del_pdv"
                            android:inputType="text"
                            android:textSize="@dimen/dimen_letra_app_estandar" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="18dp">

                    <ImageView
                        android:id="@+id/image_nombre_cliente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/accept"
                        android:src="@drawable/ic_perm_identity_black_24dp"
                        android:tint="@color/colorPrimary" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_nombre_cliente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/image_nombre_cliente"
                        android:layout_toRightOf="@+id/image_nombre_cliente">

                        <EditText
                            android:id="@+id/edit_nombre_cliente"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/nombre_del_cliente"
                            android:inputType="text"
                            android:textSize="@dimen/dimen_letra_app_estandar" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/departamento"
                    android:textColor="@color/colorAccent"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/image_depto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/accept"
                        android:src="@drawable/ic_list_black_24dp"
                        android:tint="@color/colorPrimary" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_depto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/image_depto"
                        android:layout_toRightOf="@+id/image_depto">

                        <Spinner
                            android:id="@+id/spinner_depto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_toEndOf="@+id/image_distrito"
                            android:layout_toRightOf="@+id/image_distrito"
                            android:textSize="@dimen/dimen_letra_app_estandar" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/provincia"
                    android:textColor="@color/colorAccent"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/image_provincia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/accept"
                        android:src="@drawable/ic_list_black_24dp"
                        android:tint="@color/colorPrimary" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_provincia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/image_provincia"
                        android:layout_toRightOf="@+id/image_provincia">

                        <Spinner
                            android:id="@+id/spinner_provincia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_toEndOf="@+id/image_distrito"
                            android:layout_toRightOf="@+id/image_distrito"
                            android:textSize="@dimen/dimen_letra_app_estandar" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/distrito"
                    android:textColor="@color/colorAccent"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/image_distrito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/accept"
                        android:src="@drawable/ic_list_black_24dp"
                        android:tint="@color/colorPrimary" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_distrito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/image_distrito"
                        android:layout_toRightOf="@+id/image_distrito">

                        <Spinner
                            android:id="@+id/spinner_distrito"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_toEndOf="@+id/image_distrito"
                            android:layout_toRightOf="@+id/image_distrito"
                            android:textSize="@dimen/dimen_letra_app_estandar" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/circuito"
                    android:textColor="@color/colorAccent"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/image_circuito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/accept"
                        android:src="@drawable/ic_list_black_24dp"
                        android:tint="@color/colorPrimary" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_circuito"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/image_circuito"
                        android:layout_toRightOf="@+id/image_circuito">

                        <Spinner
                            android:id="@+id/spinner_circuito"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_toEndOf="@+id/image_distrito"
                            android:layout_toRightOf="@+id/image_distrito"
                            android:textSize="@dimen/dimen_letra_app_estandar" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ruta"
                    android:textColor="@color/colorAccent"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/image_ruta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:contentDescription="@string/accept"
                        android:src="@drawable/ic_list_black_24dp"
                        android:tint="@color/colorPrimary" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_ruta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/image_ruta"
                        android:layout_toRightOf="@+id/image_ruta">

                        <Spinner
                            android:id="@+id/spinner_ruta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_toEndOf="@+id/image_distrito"
                            android:layout_toRightOf="@+id/image_distrito"
                            android:textSize="@dimen/dimen_letra_app_estandar" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/estado_comercial"
                    android:textColor="@color/colorAccent"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/image_est_comercial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/accept"
                        android:src="@drawable/ic_list_black_24dp"
                        android:tint="@color/colorPrimary" />


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_est_comercial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/image_est_comercial"
                        android:layout_toRightOf="@+id/image_est_comercial">

                        <Spinner
                            android:id="@+id/spinner_est_comercial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginStart="8dp"
                            android:layout_toEndOf="@+id/image_distrito"
                            android:layout_toRightOf="@+id/image_distrito"
                            android:textSize="@dimen/dimen_letra_app_estandar" />

                    </android.support.design.widget.TextInputLayout>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>